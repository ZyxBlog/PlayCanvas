{
    "restartable": "rs",
    "ignore": [
            ".git",
            "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "": "node",
        "js": "node --harmony"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "src/*",
        "server/*"
    ],
    "env": {
        "NODE_ENV": "development",
        "PORT": "1234"
    },
    "ext": "js json",
    "legacy-watch": false
}